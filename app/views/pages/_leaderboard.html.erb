<% @users.each do |user| %>
  <div class="d-flex flex-column border bg-my-white p-4 m-2 rounded-4 align-items-center">
     <div class=""><% if user.photo.present? %>
        <%= cl_image_tag user.photo.key, height: 50,
              width: 50, crop: :fill, class: "rounded-4"
              # class: "avatar"
        %>
      <% else %>
        <%= %>
      <% end %>
    </div>
    <div class="d-flex flex-column align-items-center">
    <% user.cars.each do |car| %>
        <div class="my-2">
        <span class="fs-4 rounded-4 px-2 py-1 orange-pill">
          <i class="fa-regular fa-star fa-sm"> <%= car.total_car_reward %> </i>
        </span>
      </div>
    <% end %>
  </div>
</div>
<% end %>
