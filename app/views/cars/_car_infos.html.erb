<div class="d-flex border rounded-4 p-3 my-3 bg-white">
  <!-- Picture -->
  <% if car.photo.present? %>
    <%= cl_image_tag car.photo.key, height: 200, width: 200, crop: :fill, class: "rounded-4 border" %>
  <% else %>
    <%= image_tag "car.jpg",
      style: 'object-fit: cover; width: 200px; height: 200px;',
      class: "rounded-4 border" %>
  <% end %>

  <!-- Info about the car -->
  <div class="px-3 w-100">
    <h3><%= car.vehicle %></h3>
    <div>year: <%= car.year %></div>
    <div>color: <%= car.color %></div>
    <div>transmission: <%= car.transmission %></div>
    <div>price: <%= car.price %></div>
    <div>insurer: <%= car.insurer.name %></div>
    <div class="d-flex justify-content-center p-1">
      <%= link_to "Edit", edit_user_car_path(car.user, car), class: "btn btn-primary mx-4 rounded-4" %>
      <%= link_to "Delete", car_path(car), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "btn btn-danger mx-4 text-white rounded-4" %>
    </div>
  </div>
</div>
