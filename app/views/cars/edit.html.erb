
<h2>Edit your <%= @car.vehicle %></h2>
<%=  simple_form_for [@user, @car] do |f| %>
  <%= f.input :vehicle %>
  <%= f.input :transmission %>
  <%= f.input :color %>
  <%= f.input :year %>
  <%= f.input :kilometers %>
  <%= f.input :price %>
  <%= f.button :submit, 'Update Car', class: 'btn btn-primary' %>
<% end %>
