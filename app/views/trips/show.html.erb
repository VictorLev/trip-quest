<%= turbo_frame_tag 'modal' do %>
  <div data-controller="modals">
    <div class="mymodal-overlay" data-action="click->modals#close"></div>
    <div class="mymodal bg-white w-50 h-50">
      <div class="position-absolute top-0 end-0 p-3">
        <%= link_to trips_path, data: {
            action: "modals#close"
          } do %>
          <i class="fa-solid fa-x"></i>
        <% end %>
      </div>
      <div class="row">
        <div class="col-6">
          <h2><%= @trip.name%></h2>
          <p>Date: <%= @trip.date %></p>
          <p>Rewards: <%= @trip.reward_point %></p>
        </div>
        <div class="col-6 p-4 rounded-4"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-user-id-value="<%= current_user.id %>">
            <div data-map-target="map" class="border rounded-4" style="width: 100%; height: 100%;">
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
