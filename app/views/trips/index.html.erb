<div class="container">
  <div class="m-4">
    <!-- Title with Trip Count -->
    <div class="point-calculator d-flex justify-content-between">
      <h2><strong><span class="main-title">My</span><span class="accent-title">Trips</span></strong></h2>
      <p>You have made <%= @trips.count %> trips in the last month and you have <%= @total_points.sum * 50%> points! </p>
      <%= link_to "Add a trip", new_trip_path, class: "btn btn-warning rounded-4" %>
    </div>
    <hr>
    <br>
    <br>
    <!-- Display all the trips -->
    <div class="position-relative p-4 bg-white rounded-4 shadow-lg">
      <div class="d-flex justify-content-end align-items-center">


        <div class="d-flex align-items-center border rounded-4 p-3">

          <%= simple_form_for :trip, url: trips_path, method: :get, data: { controller: 'datepicker' }, html: { class: "d-flex" } do |f| %>
            <%= f.input :start_date, as: :string, input_html: { data: { datepicker_target: "startDate" } } %>
            <%= f.input :end_date, as: :string, input_html: { data: { datepicker_target: "endDate" }, id: 'end_date' } %>
            <div class="ms-3">
              <%= f.label :car, "Search by car:" %>
              <%= f.collection_select :car, @cars, :id, :vehicle, { prompt: "Select a vehicle" }, { class: "form-control" } %>
            </div>
            <div class="ms-5">
              <%= f.submit "Filter", class: "btn btn-warning rounded-4" %>
            </div>
            <%= link_to "Reset", trips_path, class: "btn rounded-4" %>
          <% end %>
          <!-- Search by car -->
        </div>
      </div>
      <table class="table table-hover mt-4">
        <thead>
          <tr >
            <th class="bg-white" scope="col">Trips</th>
            <th class="bg-white" scope="col">Car</th>
            <th class="bg-white" scope="col">Date</th>
            <th class="bg-white" scope="col">
              <div class="d-flex justify-content-end align-items-center ">
                <div class="me-3">
                  TotalPoints
                </div>
                <div class="fs-3 rounded-4 px-2 py-1 orange-pill font-weight-normal">
                  <%= @total_points.sum * 50 %>
                  <i class="fa-solid fa-coins"></i>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @trips.each do |trip| %>
          <%= render partial: 'trip', locals: { trip: trip } %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
