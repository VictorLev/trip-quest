<%=  simple_form_for user,
  html: {
    class: user.errors.any? ? "" : "d-none",
    data: {
      edit_account_target: "form",
      action: "submit->edit-account#update"
    }
  } do |f|
%>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :age %>
  <%= f.input :location %>
  <%= f.input :gender %>
  <%= f.button :submit, 'Update User', class: 'btn btn-primary' %>
<% end %>
